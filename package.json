{
  "name": "translations-build-tools",
  "version": "0.0.0",
  "description": "Helpers for the build stack to compile OVH translations",
  "author": "OVH SAS",
  "license": "BSD-3-Clause",
  "repository": "ovh-ux/translations-build-tools",
  "keywords": [
    "translations",
    "helpers",
    "ovh"
  ],
  "main": "./src/index.js",
  "scripts": {
    "test": "eslint --quiet src/",
    "lint": "eslint --quiet --fix src/",
    "version": "npx conventional-changelog-cli -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "postversion": "git push && git push --tags"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "loader-utils": "^1.1.0",
    "lodash": "^4.17.11",
    "rollup-pluginutils": "^2.3.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.1.2",
    "@commitlint/config-angular": "^7.1.2",
    "eslint": "^5.5.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "husky": "^1.0.0",
    "lint-staged": "^7.3.0"
  }
}
